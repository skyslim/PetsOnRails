            <h2>Product</h2>
            
            <div>
                <p id="notice"><%= notice %></p>

                <%= image_tag @product.image.url(:medium) %>


                <p>
                  <strong>Name:</strong>
                  <%= @product.name %>
                </p>

                <p>
                  <strong>Category:</strong>
                  <%= Category.find(@product.category_id).name %>
                </p>


                <p>
                  <strong>Animal:</strong>
                  <%= Animal.find(@product.animal_id).name %>
                </p>

                <p>
                  <strong>Price:</strong>
                  <%= @product.price %>
                </p>

                <p>
                  <strong>Description:</strong>
                  <%= @product.description %>
                </p>
        <% if current_user.try(:admin?) %>

                <%= link_to 'Edit', edit_product_path(@product),  class: "yellow-button" %> |
                <% else %>
                <span class="yellow-button">
                    <%= link_to "Add to Cart", :controller => :cart, :action=> :add, :id => @product %>
                </span>
        <% end %>        
                <%= link_to 'Back', products_path,  class: "yellow-button" %>
            </div>
